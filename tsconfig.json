{
  "compilerOptions": {
    "target": "ES5",                                  
    "module": "commonjs",                               
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
    },
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                     
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
    
  "include": ["next-env.d.ts", "***/**/*.ts", "***/**/*.tsx","***/**/*.json"],
  "exclude": ["node_modules"],
}
